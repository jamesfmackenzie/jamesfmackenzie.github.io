---
layout: null
---
<?xml version="1.0" encoding="utf-8"?>
<rss version="2.0" xmlns:atom="http://www.w3.org/2005/Atom" xmlns:webfeeds="http://webfeeds.org/rss/1.0">
  <channel>
    <title>{{ site.name | xml_escape }}</title>
    <link>{{ site.url }}/</link>
	<atom:link href="{{ site.url }}/feed.xml" rel="self" type="application/rss+xml" />
	<description>{{ site.description | xml_escape }}</description>
    <language>en</language>
    <pubDate>{{ site.time | date_to_rfc822 }}</pubDate>
    <lastBuildDate>{{ site.time | date_to_rfc822 }}</lastBuildDate>
	<category>Programming</category>
	<category>Tech</category>
	<category>Retrogaming</category>
	<generator>Jekyll v{{ jekyll.version }}</generator>
    <docs>https://validator.w3.org/feed/docs/rss2.html</docs>
	<webfeeds:icon>{{ site.url }}/img/layout/logo-square.png</webfeeds:icon>
	<image>
	  <url>{{ site.url }}/img/layout/logo-square.png</url>
	  <title>{{ site.name | xml_escape }}</title>
	  <link>{{ site.url }}/</link>
	</image>
    {% for post in site.posts limit:20 %}
	    <item>
          <title>{{ post.title | xml_escape }}</title>
		  {% if post.image %}
		    <description>
			  <![CDATA[
			  <img src="{{ site.url }}/img/posts/{{ post.image }}" alt="featured image" />
			  <p>{{ post.summary }}</p>
			  ]]>
            </description>
		  {% else %}
		    <description>{{ post.summary | xml_escape }}</description>
		  {% endif %}
          <pubDate>{{ post.date | date_to_rfc822 }}</pubDate>
          {% if post.layout == "tweet" %}
		    <link>https://twitter.com/jamesfmackenzie/status/{{ post.tweetId }}</link>
		    <guid isPermaLink="true">https://twitter.com/jamesfmackenzie/status/{{ post.tweetId }}</guid>
		  {% elsif post.layout == "youtube" %}
		    <link>https://youtu.be/{{ post.videoId }}</link>
		    <guid isPermaLink="true">https://youtu.be/{{ post.videoId }}</guid>
		  {% else %}
		    <link>{{ post.url | prepend: site.url }}</link>
		    <guid isPermaLink="true">{{ post.url | prepend: site.url }}</guid>
		  {% endif %}
		  {% if post.image %}
		    <webfeeds:featuredImage url="{{ site.url }}/img/posts/{{ post.image }}" />
		  {% endif %}
		  {% for tag in post.tags %}
            <category>{{ tag | xml_escape }}</category>
          {% endfor %}
          {% for cat in post.categories %}
            <category>{{ cat | xml_escape }}</category>
          {% endfor %}
        </item>
    {% endfor %}
  </channel>
</rss>
